


    
# Curl commands for REST Server resource Zoro
# Post
curl -X POST -H "Content-Type: application/json" \
-d '{"Dog": "sample string"}' \
http://localhost:8520/v1/zoros

# Get
curl -X GET -H "Content-Type: application/json" \
http://localhost:8520/v1/zoros

# Put
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Dog": "sample string"}' \
http://localhost:8520/v1/zoros/123

# Put
### wrong id passed in param
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Dog": "sample string"}' \
http://localhost:8520/v1/zoros/1234

# Get  (retrieve specific Zoro)
curl -X GET -H "Content-Type: application/json" \
http://localhost:8520/v1/zoros/123

# Delete
curl -X DELETE -H "Content-Type: application/json" \
http://localhost:8520/v1/zoros/123

    

# when mysql throws error about server connection, fire below commands
# CREATE USER 'root'@'%' IDENTIFIED BY 'password';
# GRANT ALL PRIVILEGES ON *.* TO 'root'@'%';

